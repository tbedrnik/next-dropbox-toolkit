{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "strict": false,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
